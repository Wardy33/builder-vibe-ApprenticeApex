# ApprenticeApex Environment Configuration Template
# Copy this to .env and replace with your actual values
# NEVER commit real secrets to version control

# Server Configuration
NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:5204

# Database Configuration (Use your actual database URL)
DATABASE_URL=postgresql://username:password@host:port/database
MONGODB_URI=mongodb://localhost:27017/apprenticeapex

# JWT Configuration (Generate secure 64+ character secret)
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-64-characters-long-for-security
JWT_EXPIRES_IN=24h

# Stripe Configuration (Use your actual API keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/auth/google/callback

# Email Service Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@apprenticeapex.com
EMAIL_FROM_NAME=ApprenticeApex

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Master Admin Configuration (Change these!)
MASTER_ADMIN_CODE=CHANGE_THIS_CODE
MASTER_ADMIN_SETUP_CODE=CHANGE_THIS_SETUP_CODE

# AI Moderation Configuration
AI_MODERATION_ENABLED=true
AI_MODERATION_CONFIDENCE_THRESHOLD=0.8
AI_AUTO_SUSPEND_THRESHOLD=0.9

# Neon Database Configuration (if using Neon)
NEON_PROJECT_ID=your-neon-project-id

# Development/Production Flags
DEBUG=false
LOG_LEVEL=info

# IMPORTANT SECURITY NOTES:
# 1. Generate strong, unique secrets for each environment
# 2. Use different API keys for development/staging/production
# 3. Never reuse secrets across environments
# 4. Rotate secrets regularly
# 5. Use environment variables in production, not .env files
