# ApprenticeApex Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to git repository

# Server Configuration
NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:5204

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# JWT Configuration (Required)
JWT_SECRET=your-jwt-secret-minimum-32-characters-long-for-security
JWT_REFRESH_SECRET=your-jwt-refresh-secret-32-characters-long

# Stripe Payment Configuration (Required for production)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Google OAuth Authentication (Required)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Email Configuration (Required for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email_username_here
SMTP_PASSWORD=your_email_app_password_here
FROM_EMAIL=noreply@yourdomain.com
FROM_EMAIL_NAME=ApprenticeApex

# Twilio Configuration (Optional - for video calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret

# Daily.co Configuration (Optional - alternative for video calls)
DAILY_API_KEY=your_daily_api_key
DAILY_DOMAIN_NAME=your_daily_domain

# File Upload Configuration (Optional)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Master Admin Configuration
MASTER_ADMIN_CODE=your_admin_code_here
MASTER_ADMIN_SETUP_CODE=your_setup_code_here

# Development Configuration
DEBUG=apprenticeapex:*
LOG_LEVEL=info
