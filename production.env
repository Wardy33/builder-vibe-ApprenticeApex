# Production Environment Configuration
NODE_ENV=production
PORT=443

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/apprenticeapex-prod?retryWrites=true&w=majority
MONGODB_MAX_CONNECTIONS=10
MONGODB_TIMEOUT=30000

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-minimum-64-characters-long-for-production-security-replace-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Domain and SSL
DOMAIN=apprenticeapex.com
FRONTEND_URL=https://apprenticeapex.com
API_URL=https://api.apprenticeapex.com

# SSL Configuration (paths to your SSL certificates)
SSL_CERT_PATH=/etc/ssl/certs/apprenticeapex.pem
SSL_KEY_PATH=/etc/ssl/private/apprenticeapex.key

# Email Service (for user verification)
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@apprenticeapex.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=ApprenticeApex <noreply@apprenticeapex.com>

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
ERROR_TRACKING_DSN=your-sentry-dsn-or-similar
ANALYTICS_ID=your-analytics-id

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Security Headers
HELMET_ENABLED=true
CORS_ORIGIN=https://apprenticeapex.com,https://www.apprenticeapex.com

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=3600

# Monitoring URLs
HEALTH_CHECK_URL=/api/ping
METRICS_ENDPOINT=/api/metrics
